@model CategoryVM
@{
    ViewBag.Title = "AddCategory";
}




@using (Html.BeginForm())
{
    <div>
        @Html.TextBoxFor(x => x.Category.CategoryName, new { placeholder = "Kategori ismi giriniz" })
    </div>
    <div>
        @Html.TextBoxFor(x => x.Category.Description, new { placeholder = "Acıklama  giriniz" })
    </div>
    <div>
        <button class="btn btn-primary">
            Ekle
        </button>
    </div>
}
