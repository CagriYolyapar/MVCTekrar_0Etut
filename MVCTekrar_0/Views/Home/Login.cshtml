@model AuthorVM

@{
    ViewBag.Title = "Login";
}

@using(Html.BeginForm())
  {
    <div>
        @Html.TextBoxFor(x => x.Author.UserName, new { placeholder="Kullanıcı ismi giriniz"})
    </div>
    <div>
        @Html.PasswordFor(x=>x.Author.Password,new { placeholder="Sifre giriniz"})
    </div>
    <div>
        <button class="btn btn-primary">
            Login
        </button>
    </div>
  }

